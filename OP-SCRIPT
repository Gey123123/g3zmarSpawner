local Spawner = loadstring(game:HttpGet("https://raw.githubusercontent.com/ataturk123/GardenSpawner/refs/heads/main/Spawner.lua"))()

pcall(function()
    game.CoreGui:FindFirstChild("g3zmarSpawner"):Destroy()
end)

local gui = Instance.new("ScreenGui", game:GetService("CoreGui"))
gui.Name = "g3zmarSpawner"
gui.ResetOnSpawn = false

-- Draggable Main Frame
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 460, 0, 310)
frame.Position = UDim2.new(0.5, -230, 0.5, -155)
frame.BackgroundColor3 = Color3.fromRGB(35, 35, 60)
frame.BackgroundTransparency = 0
frame.Active = true
frame.Draggable = true
frame.Parent = gui

local uicorner = Instance.new("UICorner", frame)
uicorner.CornerRadius = UDim.new(0, 12)

-- Title Bar
local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, 0, 0, 40)
title.BackgroundTransparency = 1
title.Text = "g3zmar OP Script Spawner"
title.Font = Enum.Font.GothamBold
title.TextSize = 22
title.TextColor3 = Color3.fromRGB(140, 255, 255)

-- Tabs
local tabNames = {"Pet", "Seed", "Egg"}
local currentTab = "Pet"
local tabs = {}

local function createTab(name, index)
	local btn = Instance.new("TextButton")
	btn.Size = UDim2.new(0, 120, 0, 30)
	btn.Position = UDim2.new(0, 20 + ((index - 1) * 140), 0, 45)
	btn.BackgroundColor3 = Color3.fromRGB(60, 60, 90)
	btn.TextColor3 = Color3.fromRGB(255, 255, 255)
	btn.Font = Enum.Font.GothamSemibold
	btn.Text = name
	btn.Name = name
	btn.Parent = frame
	btn.AutoButtonColor = true

	local corner = Instance.new("UICorner", btn)
	corner.CornerRadius = UDim.new(0, 6)

	btn.MouseButton1Click:Connect(function()
		currentTab = name
		updateVisibility()
	end)

	tabs[name] = btn
end

for i, name in ipairs(tabNames) do
	createTab(name, i)
end

-- Create Input
local function createInput(labelText, y)
	local label = Instance.new("TextLabel")
	label.Size = UDim2.new(0, 120, 0, 25)
	label.Position = UDim2.new(0, 30, 0, y)
	label.BackgroundTransparency = 1
	label.Text = labelText
	label.Font = Enum.Font.Gotham
	label.TextSize = 16
	label.TextColor3 = Color3.fromRGB(200, 200, 255)
	label.TextXAlignment = Enum.TextXAlignment.Left
	label.Parent = frame

	local input = Instance.new("TextBox")
	input.Size = UDim2.new(0, 260, 0, 25)
	input.Position = UDim2.new(0, 150, 0, y)
	input.BackgroundColor3 = Color3.fromRGB(50, 50, 80)
	input.TextColor3 = Color3.new(1, 1, 1)
	input.Font = Enum.Font.Gotham
	input.TextSize = 16
	input.PlaceholderText = "Type here..."
	input.Text = ""
	input.ClearTextOnFocus = false
	input.Parent = frame

	local ic = Instance.new("UICorner", input)
	ic.CornerRadius = UDim.new(0, 6)

	return input
end

-- Inputs
local petName = createInput("Pet Name", 90)
local petWeight = createInput("Pet Weight", 125)
local petAge = createInput("Pet Age", 160)

local seedName = createInput("Seed Name", 90)
local eggName = createInput("Egg Name", 90)

-- Show/hide based on tab
function updateVisibility()
	petName.Visible = currentTab == "Pet"
	petWeight.Visible = currentTab == "Pet"
	petAge.Visible = currentTab == "Pet"

	seedName.Visible = currentTab == "Seed"
	eggName.Visible = currentTab == "Egg"
end

updateVisibility()

-- Spawn Button
local spawn = Instance.new("TextButton", frame)
spawn.Size = UDim2.new(0, 160, 0, 35)
spawn.Position = UDim2.new(0.5, -80, 1, -50)
spawn.BackgroundColor3 = Color3.fromRGB(0, 190, 160)
spawn.Text = "Spawn"
spawn.TextColor3 = Color3.new(1, 1, 1)
spawn.Font = Enum.Font.GothamBold
spawn.TextSize = 18

local sCorner = Instance.new("UICorner", spawn)
sCorner.CornerRadius = UDim.new(0, 8)

spawn.MouseButton1Click:Connect(function()
	if currentTab == "Pet" then
		local name = petName.Text
		local weight = tonumber(petWeight.Text)
		local age = tonumber(petAge.Text)
		if name ~= "" and weight and age then
			Spawner.SpawnPet(name, weight, age)
		end
	elseif currentTab == "Seed" then
		local name = seedName.Text
		if name ~= "" then
			Spawner.SpawnSeed(name)
		end
	elseif currentTab == "Egg" then
		local name = eggName.Text
		if name ~= "" then
			Spawner.SpawnEgg(name)
		end
	end
end)
